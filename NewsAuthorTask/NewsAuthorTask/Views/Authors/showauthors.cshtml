@model IEnumerable<NewsAuthorTask.Models.Author>

@{
    ViewBag.Title = "showauthors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Request.IsAuthenticated)
{

<h2>Authors</h2>

<p>
    @Html.ActionLink("Create New Author", "createauthor")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "editauthor", new { id = item.Id }) |
            @Html.ActionLink("Delete", "deleteauthor", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Author?');" })
        </td>
    </tr>
}

</table>
}
else
{
    <h2>You need to login first!</h2>
    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}